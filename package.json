{
  "name": "DeDeDe.ro",
  "version": "0.8",
  "description": "Sursa site-ului DeDeDe.ro",
  "main": "./src/build.js",
  "scripts": {
    "start": "npm run dev",
    "build": "node ./src/cleanPublic.js && npm run build:rollup && npm run build:html",
    "build:rollup": "rollup -c",
    "build:html": "node ./src/build.js && ncp ./assets/images ./public/images && ncp ./assets/resources ./public/resources",
    "dev": "rollup  -c -w --no-watch.clearScreen",
    "serve": "node ./src/cleanPublic.js && npm run build:rollup && NODE_ENV=production node ./src/server.js",
    "eslint": "eslint --ext .js .",
    "eslint:fix": "eslint --fix --ext .js .",
    "prettier:svelte": "prettier --write --plugin-search-dir=. ./**/*.svelte"
  },
  "type": "commonjs",
  "engines": {
    "node": ">= 12.0.0"
  },
  "dependencies": {
    "@elderjs/elderjs": "^1.6.5",
    "@elderjs/plugin-browser-reload": "^1.3.4",
    "@elderjs/plugin-markdown": "^1.3.4",
    "@elderjs/plugin-seo-check": "1.3.4",
    "body-parser": "^1.19.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "del": "^6.0.0",
    "dotenv": "^14.2.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.2.0",
    "intersection-observer": "^0.12.0",
    "ncp": "2.0.0",
    "polka": "^0.5.2",
    "sirv": "^2.0.2",
    "svelte": "3.46.2",
    "svelte-preprocess": "^4.10.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-env": "^7.16.8",
    "@babel/runtime": "^7.16.7",
    "autoprefixer": "^10.4.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.6.0",
    "rollup": "^2.64.0"
  },
  "author": "Viorel Mocanu",
  "license": "MIT",
  "files": [
    "index.js",
    "elderjs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ViorelMocanu/DDD.git"
  },
  "keywords": [
    "svelte",
    "elderjs",
    "ssr",
    "static",
    "site",
    "generator",
    "seo",
    "ssg",
    "dedede.ro",
    "DDD",
    "dezinsectie",
	"dezinfectie",
	"deratizare"
  ],
  "bugs": {
    "url": "https://github.com/ViorelMocanu/DDD/issues"
  },
  "homepage": "https://github.com/ViorelMocanu/DDD#readme"
}
